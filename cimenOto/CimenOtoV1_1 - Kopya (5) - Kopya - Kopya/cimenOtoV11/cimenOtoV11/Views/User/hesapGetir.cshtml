@using cimenOtoV11.Models
@model cimenOtoV11.Models.tbl_User
@{
    ViewBag.Title = "Hesap Bilginiz  | Oto Yedek Parça | Çimen Oto";
    <link rel="icon" type="image/png" href="~/Content/images/logo.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("hesapGuncelle", "User", FormMethod.Post))
{
    db_CimenOtoEntities db = new db_CimenOtoEntities();
    var kulID = Model.kulID;
    <table class="table table-bordered">
        <tr style="text-align:center;">
            <td style="color:white;">Kullanıcı İD:</td>
            <td>@Html.TextBoxFor(x => x.kulID, new { @class = "form-control", required = "required", @readonly = "readonly" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">Ad:</td>
            <td>@Html.TextBoxFor(x => x.ad, new { @class = "form-control", required = "required", @readonly = "readonly" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">Soyad:</td>
            <td>@Html.TextBoxFor(x => x.soyad, new { @class = "form-control", required = "required", @readonly = "readonly" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">Kullanıcı Adı:</td>
            <td>@Html.TextBoxFor(x => x.userName, new { @class = "form-control", required = "required", @readonly = "readonly" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">Şifre:</td>
            <td>@Html.TextBoxFor(x => x.password, new { @class = "form-control", required = "required" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">E-MAİL:</td>
            <td>@Html.TextBoxFor(x => x.eMail, new { @class = "form-control", required = "required", @type = "email" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">Tel No:</td>
            <td>@Html.TextBoxFor(x => x.telNo, new { @class = "form-control", required = "required", @maxlength = "11" })</td>
        </tr>
        <tr style="text-align:center;">
            <td style="color:white;">VARSAYILAN ADRESİNİZ:</td>
            <td>@Html.DropDownListFor(x => x.adres, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control", @required = "required" })</td>
        </tr>
    </table>
    <button style="color:black;" class="btn btn-success">Hesap Bilgilerini Güncelle</button>
}

