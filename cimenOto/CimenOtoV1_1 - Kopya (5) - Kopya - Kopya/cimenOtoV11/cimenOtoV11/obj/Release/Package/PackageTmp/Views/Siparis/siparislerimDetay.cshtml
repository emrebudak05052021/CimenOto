@using cimenOtoV11.Models
@model List<tbl_SİparisDetay>
@{
    ViewBag.Title = "Sipariş Detayınız | Oto Yedek Parça | Çimen Oto";
    <link rel="icon" type="image/png" href="~/Content/images/logo.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #label {
        color: white;
    }
</style>
<h2 style="color:white;">Sipariş Detayınız</h2>

@foreach (var item in Model)
{
    <form style="border:2px solid white; padding:10px;">
        <div class="form-group row">
            <label style="color:white;" class="col-sm-2 col-form-label"><strong>Sipariş No:</strong></label>
            <div class="col-sm-10">
                <label id="label">@item.siparisID</label>
            </div>
        </div>
        <div class="form-group row">
            <label style="color:white;" class="col-sm-2 col-form-label"><strong>Parça Adı:</strong></label>
            <div class="col-sm-10">
                <label id="label">@item.tbl_AracParca.pAd</label>
            </div>
        </div>
        <div class="form-group row">
            <label style="color:white;" class="col-sm-2 col-form-label"><strong>Sipariş Adet:</strong></label>
            <div class="col-sm-10">
                <label id="label">@item.miktar</label>
            </div>
        </div>
        <div class="form-group row">
            <label style="color:white;" class="col-sm-2 col-form-label"><strong>Adres Numaranız:</strong></label>
            <div class="col-sm-10">
                <label id="label">@item.tbl_Adres.adresSatir1</label>
            </div>
        </div>
        <div class="form-group row">
            <label style="color:white;" class="col-sm-2 col-form-label"><strong>Sipariş Adet:</strong></label>
            <div class="col-sm-10">
                <label style="color:lightgreen;">@item.toplamTutar TL</label>
            </div>
        </div>
    </form>
}
@{
    Guid? user = Session["UserID"] as Guid?;
}
<a style="color:black; margin-top:10px;" href="/Siparis/siparislerim/@user" class="btn btn-warning">Siparişlere Dön</a>

